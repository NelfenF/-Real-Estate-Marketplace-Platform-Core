<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project4.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top bg-primary" data-bs-theme="dark" id="navMain">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-controller="Dashboard" asp-action="Dashboard">
                    CIS 3342 Projects
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="../index.html">Index</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AgentDashboard" asp-action="AgentDashboard">Agent Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="RealEstateHome" asp-action="CreateHome">Create New Listing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="RealEstateHome" asp-action="AllEditHomes">All Listing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Showing" asp-action="ViewShowings">All Showings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Offer" asp-action="AllOffers">All Offers</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <footer class="bg-primary border-top footer text-muted">
        <div class="container align-content-center">
            <p class="text-white">&copy; 2024 Brandon White & Nathan Flohr. All Rights Reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

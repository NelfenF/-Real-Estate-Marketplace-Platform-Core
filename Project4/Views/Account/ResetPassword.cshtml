@{
}
<div class="container mt-5">

	<form asp-action="ResetPassword" method="post" class="card p-4 shadow">
		<h4 class="card-title">Reset Password</h4>
		<p class="text-danger">@ViewBag.ResetPasswordError</p>
		<div class="mb-3">
			<label for="newPassword" class="form-label">New Password:</label>
			<input type="password" id="newPassword" name="newPassword" class="form-control" required />
		</div>
		<div class="mb-3">
			<label for="newPasswordVerify" class="form-label">Re-Type New Password:</label>
			<input type="password" id="newPasswordVerify" name="newPasswordVerify" class="form-control" required />
		</div>
		<div class="d-flex justify-content-between mt-4">
			<button type="submit" class="btn btn-primary w-100 me-2">Reset Password</button>
			<a asp-controller="Account" asp-action="Login" class="btn btn-secondary w-100">Cancel</a>
		</div>
	</form>
</div>

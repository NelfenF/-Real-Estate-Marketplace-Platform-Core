@{
}

<div class="container mt-5 mb-5">
    <div class="card p-4 shadow">
        <h4 class="card-title">MLS Agent Login</h4>
        <form asp-controller="Account" asp-action="TryLogin" method="POST">
            <p class="text-danger">@ViewBag.LoginError</p>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username:</label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password:</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <div class="form-check mb-3">
                <input asp-for="SaveCookie" type="checkbox" class="form-check-input" />
                <label asp-for="SaveCookie" class="form-check-label">Remember Me</label>
            </div>

            <button type="submit" name="btnLogin" class="btn btn-primary w-100">Login</button>
        </form>

        <form asp-controller="Account" asp-action="CreateAccount" method="POST" class="mt-3">
            <button type="submit" name="btnCreateAccount" class="btn btn-info w-100">Create Account</button>
        </form>

        <form asp-controller="Account" asp-action="ForgotPassword" method="get" class="mt-3">
            <button type="submit" name="btnForogtPassword" class="btn btn-warning w-100">Forgot Password</button>
        </form>

        <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-secondary mt-3 w-100">Cancel</a>
    </div>
</div>



@{
}
<div class="container mt-5">
    <form asp-controller="Account" asp-action="VerifyAccountWithCode" method="POST" class="card p-4 shadow">
        <h3 class="card-title">Account Verification</h3>
        <p>Please enter the verification code or click the link send to your email</p>
        <input class="form-control" type="text" id="code" name="code" placeholder="Enter Code Here" />
        <input class="btn btn-primary w-100" type="submit" value="Submit">
        @if (TempData["Error"] != null)
        {
            <p class="text-danger">@TempData["Error"]</p>
        }
    </form>
</div>
